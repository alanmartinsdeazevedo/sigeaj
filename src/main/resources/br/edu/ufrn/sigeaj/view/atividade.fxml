<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
Tela de CRUD de Atividades
-->

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.edu.ufrn.sigeaj.controller.AtividadeController"
            prefHeight="600.0" prefWidth="1000.0">

    <top>
        <VBox style="-fx-background-color: #2ecc71;">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
            </padding>
            <Label text="Gerenciar Atividades"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <!-- Formulário -->
            <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
                <Label text="Dados da Atividade" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Separator/>

                <GridPane hgap="10.0" vgap="10.0">
                    <Label text="Setor:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="cmbSetor" promptText="Selecione o setor"
                             GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300"/>

                    <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtTipo" promptText="Ex: Alimentação, Limpeza, Vacinação"
                              GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="300"/>

                    <Label text="Descrição:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextArea fx:id="txtDescricao" promptText="Descreva a atividade realizada"
                             GridPane.columnIndex="1" GridPane.rowIndex="2"
                             prefRowCount="3" prefWidth="300"/>

                    <Label text="Data Execução:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <DatePicker fx:id="dtpDataExecucao" GridPane.columnIndex="1" GridPane.rowIndex="3"
                               prefWidth="300"/>
                </GridPane>

                <!-- Botões de ação -->
                <HBox spacing="10.0">
                    <Button text="Novo" onAction="#onNovo"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
                    <Button text="Salvar" onAction="#onSalvar"
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                    <Button text="Excluir" onAction="#onExcluir"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                    <Button text="Cancelar" onAction="#onCancelar"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
                </HBox>
            </VBox>

            <!-- Tabela de atividades -->
            <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
                <Label text="Atividades Cadastradas" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Separator/>

                <TableView fx:id="tblAtividades" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="colSetor" text="Setor" prefWidth="150"/>
                        <TableColumn fx:id="colTipo" text="Tipo" prefWidth="150"/>
                        <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="400"/>
                        <TableColumn fx:id="colDataExecucao" text="Data Execução" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>

        </VBox>
    </center>

</BorderPane>
