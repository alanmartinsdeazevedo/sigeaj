<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<!--
Tela Principal do SIGEAJ
-->

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.edu.ufrn.sigeaj.controller.MainController"
            style="-fx-background-color: #ecf0f1;">

    <!-- Cabeçalho -->
    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <padding>
                    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
                </padding>

                <Label text="SIGEAJ" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Label text="Sistema de Gestão de Setores Produtivos da EAJ"
                       style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="lblUsuarioLogado" text="Usuário: "
                       style="-fx-text-fill: white; -fx-font-size: 12px;"/>

                <Button text="Sair" onAction="#onSair"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Conteúdo central -->
    <center>
        <VBox alignment="CENTER" spacing="30.0">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </padding>

            <Label text="Selecione uma opção" style="-fx-font-size: 28px; -fx-text-fill: #2c3e50;"/>

            <!-- Grid de botões de menu -->
            <GridPane hgap="20.0" vgap="20.0" alignment="CENTER">

                <!-- Botão Setores Produtivos -->
                <VBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="0"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Button text="Gerenciar Setores Produtivos" onAction="#onGerenciarSetores"
                            prefWidth="250" prefHeight="60"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                    <Label text="Cadastre e gerencie os setores da EAJ"
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px;"/>
                </VBox>

                <!-- Botão Atividades -->
                <VBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Button text="Gerenciar Atividades" onAction="#onGerenciarAtividades"
                            prefWidth="250" prefHeight="60"
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                    <Label text="Registre atividades dos setores"
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px;"/>
                </VBox>

                <!-- Botão Registros de Produção -->
                <VBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="1"
                      GridPane.columnSpan="2"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Button text="Gerenciar Registros de Produção" onAction="#onGerenciarRegistros"
                            prefWidth="520" prefHeight="60"
                            style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                    <Label text="Acompanhe a produção de cada setor"
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px;"/>
                </VBox>

            </GridPane>

        </VBox>
    </center>

    <!-- Rodapé -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #34495e;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Label text="EAJ - Escola Agrícola de Jundiaí"
                   style="-fx-text-fill: #bdc3c7; -fx-font-size: 10px;"/>
        </HBox>
    </bottom>

</BorderPane>
