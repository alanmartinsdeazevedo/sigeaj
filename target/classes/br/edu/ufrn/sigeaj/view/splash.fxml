<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<!--
4.a - ela Inicial (Splash Screen) do SIGEAJ
-->

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.edu.ufrn.sigeaj.controller.SplashController"
            prefWidth="700" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e);">

    <!-- Conteúdo Central -->
    <center>
        <VBox alignment="CENTER" spacing="30.0">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
            </padding>

            <!-- Logo / Ícone representativo (usando formas geométricas) -->
            <VBox alignment="CENTER" spacing="10.0">
                <!-- Círculo decorativo representando o logo -->
                <StackPane>
                    <Circle radius="80" fill="#3498db" opacity="0.8"/>
                    <Circle radius="60" fill="#2980b9" opacity="0.9"/>
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="EAJ" style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;"/>
                        <Label text="UFRN" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                    </VBox>
                </StackPane>
            </VBox>

            <!-- Painel de Informações -->
            <VBox alignment="CENTER" spacing="15.0" maxWidth="600"
                  style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 3);">
                <padding>
                    <Insets bottom="30.0" left="40.0" right="40.0" top="30.0"/>
                </padding>

                <!-- Nome do Sistema -->
                <Label text="SIGEAJ" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;">
                    <font>
                        <Font size="42.0"/>
                    </font>
                </Label>

                <!-- Descrição -->
                <Label text="Sistema de Gestão de Setores Produtivos"
                       style="-fx-text-fill: #34495e; -fx-font-size: 18px;"/>

                <Separator prefWidth="400"/>

                <!-- Instituição -->
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Escola Agrícola de Jundiaí"
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label text="Universidade Federal do Rio Grande do Norte"
                           style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;"/>
                </VBox>

                <Separator prefWidth="400"/>

                <!-- Informações do Desenvolvedor -->
                <VBox alignment="CENTER" spacing="8">
                    <Label text="Desenvolvido por:" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                    <Label fx:id="lblNomeDesenvolvedor" text="[Nome do Desenvolvedor]"
                           style="-fx-text-fill: #2c3e50; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="Análise e Desenvolvimento de Sistemas"
                           style="-fx-text-fill: #95a5a6; -fx-font-size: 11px;"/>
                    <Label text="TAD0009 - Programação Orientada a Objetos"
                           style="-fx-text-fill: #95a5a6; -fx-font-size: 11px;"/>
                </VBox>

                <!-- Botão continuar -->
                <Button fx:id="btnContinuar" text="Continuar para o Sistema" onAction="#onContinuar"
                        prefWidth="300" prefHeight="45"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Button>
            </VBox>

        </VBox>
    </center>

    <!-- Rodapé -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: rgba(0, 0, 0, 0.3);">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <Label fx:id="lblVersao" text="Versão 1.0 - 2025 | Projeto Final - III Unidade"
                   style="-fx-text-fill: white; -fx-font-size: 11px;"/>
        </HBox>
    </bottom>

</BorderPane>
