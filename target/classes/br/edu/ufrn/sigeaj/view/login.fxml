<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<!--
Tela de Login
-->

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.ufrn.sigeaj.controller.LoginController"
      style="-fx-background-color: #f4f4f4;">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <!-- Painel central de login -->
    <VBox alignment="CENTER" spacing="15.0" maxWidth="400"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">

        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>

        <!-- Título -->
        <Label text="SIGEAJ" style="-fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="32.0"/>
            </font>
        </Label>

        <Label text="Sistema de Gestão de Setores Produtivos da EAJ"
               style="-fx-text-fill: #7f8c8d;">
            <font>
                <Font size="12.0"/>
            </font>
        </Label>

        <Separator prefWidth="200.0"/>

        <!-- Formulário de login -->
        <VBox spacing="10.0">
            <Label text="Email:" style="-fx-text-fill: #2c3e50;"/>
            <TextField fx:id="txtEmail" promptText="usuario@eaj.edu.br"
                      prefHeight="35.0"/>

            <Label text="Senha:" style="-fx-text-fill: #2c3e50;"/>
            <PasswordField fx:id="txtSenha" promptText="Digite sua senha"
                          prefHeight="35.0"/>

            <Button text="Entrar" onAction="#onEntrar" prefHeight="40.0"
                    maxWidth="Infinity"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Button>
        </VBox>

        <Label text="Credenciais padrão: admin@eaj.edu.br / admin123"
               style="-fx-text-fill: #95a5a6; -fx-font-size: 10px;">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Label>

    </VBox>

</VBox>
